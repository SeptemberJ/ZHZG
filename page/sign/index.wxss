.signWrap{
  width: 700rpx;
  height: auto;
  margin: 20% auto auto auto;
  background: #171717;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 10rpx #1f1f1f;
}
.signTit{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: #171717;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}
.signInside{
  width: 100%;
  height: auto;
  background: #1f1f1f;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.signMain{
  width: calc(100% - 80rpx);
  height: calc(600rpx - 80rpx);
  background: #141414;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  }
  .sign_item{
    width: calc(100% - 20rpx);
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1px solid #000;
    padding: 0 10rpx;
  }
  .chooseLocation{
    width: 150rpx;
    color: #fff;
  }
  .sign_item image{
    width: 50rpx;
    height:  50rpx;
  }
  .inputItem{
    width: calc(100% - 80rpx);
    color: #fff;
    height:  100%;
  }
  .addr{
    width: calc(100% - 80rpx -150rpx);
  }
  .colorLight{
    color: #adadad;
  }
  .sign{
    width: calc(100% - 80rpx);
    height: 100rpx;
    color: #fff;
    font-weight: bold;
    background: #329c8e;
    margin: 10rpx auto;
    }